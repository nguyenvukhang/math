% \documentclass{article}

% for coloring links in hyperref
\usepackage{xcolor}
\definecolor{blue}{HTML}{0284C7}
\definecolor{green}{HTML}{10B981}
\definecolor{gray}{HTML}{CBD5E1}
\definecolor{lightgray}{HTML}{E2E8F0}
\definecolor{pink}{HTML}{DB2777}
\def\blue#1{\textcolor{blue}{#1}}
\def\green#1{\textcolor{green}{#1}}
\def\gray#1{\textcolor{gray}{#1}}
\def\lightgray#1{\textcolor{lightgray}{#1}}

% for customizing the behavior of titles
\usepackage{titlesec}
% removes newline after \subsubsection, and adds spacing after
\titleformat{\subsubsection}[runin]{\bfseries}{\thesubsubsection}{*1}{}
\titleclass{\HwProblem}{straight}[\subsection]
\titleformat{\HwProblem}[hang]{\Large\bfseries}{\theHwProblem}{*1}{}
\titlespacing{\HwProblem}{0pt}{*4}{*1.5}

% for linking to sections within the same document
% provides `\hyperref[<target>]{<display text>}`
\usepackage[colorlinks=true,linkcolor=pink]{hyperref}
\hypersetup{pageanchor=false}

% for adding super powers to lists {itemize,enumerate}
\usepackage{enumitem}
\setlist[itemize]{itemsep=1pt,topsep=0pt}

% for all the basic math symbols
\usepackage{amsmath,amsfonts,amssymb}

% for paper dimensions
\usepackage[b5paper,
	left=0.7in,right=0.7in,
	top=0.5in,bottom=0.5in,
	footskip=10.25pt
]{geometry}

% for changing the page number appearance
\usepackage{fancyhdr}
\fancypagestyle{plain}{%
	\fancyhf{} % clear all header and footer fields
	\fancyfoot[R]{\footnotesize\lightgray[\gray{\thepage}\lightgray]}
	\renewcommand{\headrulewidth}{0pt}
	\renewcommand{\footrulewidth}{0pt}}
\pagestyle{plain}

% remove paragraph indent
\setlength{\parindent}{0pt}

% set line spacing
\setlength{\parskip}{0.5em}

% Typing macros. Keep these to an absolute minimum to maintain
% compatibility of the source.
\def\N{\mathbb{N}}
\def\Z{\mathbb{Z}}
\def\R{\mathbb{R}}
\def\C{\mathbb{C}}
\def\Re{\text{Re}}
\def\then{\Rightarrow}
\def\Quad{\quad\quad}
\def\quadd{\quad\quad\quad}
\def\Quadd{\quad\quad\quad\quad}
\def\with{\quad}
\def\desc#1{\footnotesize\text{#1}}
\def\norm#1{\left\lVert{#1}\right\rVert}
\def\QED{\hfill$\square$}
\def\iter#1#2{{#1},\ldots,{#2}}
\def\epsilon{\varepsilon}
\def\Set#1#2{\left%
\{{#1}\;\middle\vert\;{#2}\right\}}
\def\Tag#1{\tag*{($#1$)}}
\def\notimplies{\;\not\nobreak\!\!\!\!\implies}
\def\href#1#2{\hyperref[#1]{#2}}
\def\inner#1#2{\langle{#1},{#2}\rangle}

% useful environments
\newenvironment{mat}{\begin{bmatrix}}{\end{bmatrix}} % standardize matrices
\newenvironment{matd}{\begin{vmatrix}}{\end{vmatrix}} % determinant matrices
\newenvironment{enumerata}{\begin{enumerate}[label=(\alph*)]}{\end{enumerate}}
\newenvironment{enumerati}{\begin{enumerate}[label=(\roman*)]}{\end{enumerate}}

% don't number sections at all
% `\section{}` behaves like `\section*{}` now
\setcounter{secnumdepth}{0}

% brackets in increasing size:
% \big( \Big( \bigg( \Bigg(

\def\section#1{\subsubsection{\LARGE #1}}
\def\subsection#1{\subsubsection{\Large #1}}

% for enabling/disabling specific fields
\newenvironment{proof}{\paragraph{Proof.}} {\QED}
\newenvironment{compute}{\paragraph{Compute.}} {\QED}

% custom math operators
\DeclareMathOperator*{\argmin}{argmin}

% global left-align text
\AtBeginDocument{\raggedright}

% auto-generated headers
\def\Algorithm#1#2{\subsubsection{Algorithm {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Corollary#1#2{\subsubsection{Corollary {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Definition#1#2{\subsubsection{Definition {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Example#1#2{\subsubsection{Example {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Exercise#1#2{\subsubsection{Exercise {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Lemma#1#2{\subsubsection{Lemma {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Problem#1#2{\subsubsection{Problem {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Proposition#1#2{\subsubsection{Proposition {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Remark#1#2{\subsubsection{Remark {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
\def\Result#1#2{\subsubsection{Result {#1}\hspace{0.7em}{\ifx&#2&\else(\fi#2\ifx&#2&\else)\fi}}}
