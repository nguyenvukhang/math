% for coloring links in hyperref
\usepackage{xcolor}
\definecolor{blue}{HTML}{0284C7}
\definecolor{green}{HTML}{10B981}
\definecolor{gray}{HTML}{CBD5E1}
\definecolor{lightgray}{HTML}{E2E8F0}
\definecolor{pink}{HTML}{DB2777}
\definecolor{linkcolor}{HTML}{3B82F6}
\def\blue#1{\textcolor{blue}{#1}}
\def\green#1{\textcolor{green}{#1}}
\def\gray#1{\textcolor{gray}{#1}}
\def\lightgray#1{\textcolor{lightgray}{#1}}

% for customizing the behavior of titles
\usepackage{titlesec}
% removes newline after \subsection, and adds spacing after
\titleformat{\subsection}[runin]{\bfseries}{\thesubsection}{*1}{}
\titleformat{\section}[hang]{\LARGE\bfseries}{\thesection}{}{}
\titlespacing{\section}{0pt}{*4}{*3}

\titleclass{\HwProblem}{straight}[\subsection]
\titleformat{\HwProblem}[hang]{\Large\bfseries}{\theHwProblem}{*1}{}
\titlespacing{\HwProblem}{0pt}{*4}{*1.5}

\def\Subsection#1{\subsection{\Large #1}\rule{0pt}{0pt}\\[1em]}

% for linking to sections within the same document
% provides `\hyperref[<target>]{<display text>}`
\usepackage[
  pdftex,
  pdfauthor=Nguyen\space Vu\space Khang,
  pdftitle=Minimath,
  pdfsubject=Minimath,
  pdfproducer=Arch\space BTW,
  pdfcreator=pdfLaTeX\space +\space Rust,
  colorlinks=true,
  linkcolor=linkcolor
]{hyperref}
\hypersetup{pageanchor=false}

% for adding super powers to lists {itemize,enumerate}
\usepackage{enumitem}
\setlist[itemize]{itemsep=1pt,topsep=0pt}

% for all the basic math symbols
\usepackage{amsmath,amsfonts,amssymb}

% for paper dimensions
\usepackage[b5paper,
  left=0.7in,right=0.7in,
  top=0.5in,bottom=0.5in,
  footskip=10.25pt
]{geometry}

% for changing the page number appearance
\usepackage{fancyhdr}
\fancypagestyle{plain}{%
  \fancyhf{} % clear all header and footer fields
  \fancyfoot[R]{\footnotesize\lightgray[\gray{\thepage}\lightgray]}
  \renewcommand{\headrulewidth}{0pt}
  \renewcommand{\footrulewidth}{0pt}}
\pagestyle{plain}

% remove paragraph indent
\setlength{\parindent}{0pt}

% set line spacing
\setlength{\parskip}{0.4em}

% Typing macros. Keep these to an absolute minimum to maintain
% compatibility of the source.
\def\N{\mathbb{N}}
\def\Z{\mathbb{Z}}
\def\R{\mathbb{R}}
\def\C{\mathbb{C}}
\def\CX{\mathbb{C}\cup\{\infty\}}
\def\then{\Rightarrow}
\def\Quad{\quad\quad}
